<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="84dp"
        android:text="Portion Size"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/portion_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:ems="10"
        android:hint="0.5"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/textView16"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView16" />

    <Button
        android:id="@+id/addEveningSnack"
        android:layout_width="161dp"
        android:layout_height="100dp"
        android:background="@drawable/rounded_corners_blue"
        android:shadowColor="@android:color/holo_blue_light"
        android:text="evening snack"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/addAfternoonSnack"
        app:layout_constraintStart_toEndOf="@+id/addAfternoonSnack"
        app:layout_constraintTop_toTopOf="@+id/addAfternoonSnack" />

    <Button
        android:id="@+id/addLunch"
        android:layout_width="161dp"
        android:layout_height="100dp"
        android:layout_marginStart="9dp"
        android:background="@drawable/rounded_corners_blue"
        android:shadowColor="@android:color/holo_blue_light"
        android:text="lunch"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/addBreakfast"
        app:layout_constraintStart_toEndOf="@+id/addBreakfast"
        app:layout_constraintTop_toTopOf="@+id/addBreakfast" />

    <Button
        android:id="@+id/addMorningSnack"
        android:layout_width="161dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corners_blue"
        android:shadowColor="@android:color/holo_blue_light"
        android:text="morning snack"
        android:textColor="#FDFFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addBreakfast" />

    <Button
        android:id="@+id/addAfternoonSnack"
        android:layout_width="161dp"
        android:layout_height="100dp"
        android:background="@drawable/rounded_corners_blue"
        android:shadowColor="@android:color/holo_blue_light"
        android:text="afternoon snack"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="@+id/addMorningSnack"
        app:layout_constraintStart_toEndOf="@+id/addMorningSnack"
        app:layout_constraintTop_toTopOf="@+id/addMorningSnack" />

    <Button
        android:id="@+id/addDinner"
        android:layout_width="161dp"
        android:layout_height="100dp"
        android:layout_marginStart="7dp"
        android:background="@drawable/rounded_corners_blue"
        android:shadowColor="@android:color/holo_blue_light"
        android:text="dinner"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/addLunch"
        app:layout_constraintStart_toEndOf="@+id/addLunch"
        app:layout_constraintTop_toTopOf="@+id/addLunch" />

    <Button
        android:id="@+id/addBreakfast"
        android:layout_width="161dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corners_blue"
        android:shadowColor="#2D2F31"
        android:text="breakfast"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addMeal" />

    <TextView
        android:id="@+id/dailyCalorieCount"
        android:layout_width="382dp"
        android:layout_height="64dp"
        android:layout_marginStart="79dp"
        android:layout_marginEnd="79dp"
        android:text="0/2000 Calories"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date" />

    <TextView
        android:id="@+id/addMeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="174dp"
        android:layout_marginEnd="171dp"
        android:text="ADD MEAL"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dailyCalorieCount" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="222dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="222dp"
        android:text="DATE"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/foodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:ems="10"
        android:hint="mango"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <Button
        android:id="@+id/searchFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounder_corners_green"
        android:text="search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/portion_size" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Food Name"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addMorningSnack" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/foodListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchFood" />

</androidx.constraintlayout.widget.ConstraintLayout>